<% if @comment.errors.any? %>
  $('div#error_explanation').addClass('alert alert-error').text('<%= raw escape_javascript(@comment.errors.full_messages.first) %>')
<% else %>
  $('div#error_explanation').removeClass('alert alert-error').text('');
  if ($('div#topic-comments div.topic-comment').length == 0)
    $('div#topic-comments').text('');
  $('div#topic-comments').append('<%= escape_javascript(render(@comment)) %>');
<% end %>
