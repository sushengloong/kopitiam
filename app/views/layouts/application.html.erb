<!DOCTYPE html>
<html>
<head>
  <title>Kopitiam</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Kopitiam', root_url, class: 'brand' %>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="#">Action</a></li>
                <li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>
                <li class="divider"></li>
                <li class="nav-header">Nav header</li>
                <li><a href="#">Separated link</a></li>
                <li><a href="#">One more separated link</a></li>
              </ul>
            </li>
          </ul>
          <% if user_signed_in? %>
            <%= current_user.email %>
            <%= link_to('Logout', destroy_user_session_path, method: :delete, class: 'btn') %>    
          <% else %>
            <%= form_for("user", url: user_session_path, html: { class: "navbar-form pull-right" }) do |f| %>
              <%= f.text_field :email, placeholder: 'email', class: 'input-small' %>
              <%= f.password_field :password, placeholder: 'password', class: 'input-small' %>
              <%= f.submit 'login', class: 'btn btn-primary' %>
              <%= link_to "recover password", new_password_path('user'), class: "btn" %>
            <% end %>
          <% end %>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span9">
        <% if notice.present? %>
          <p class="notice"><%= notice %></p>
        <% end %>
        <% if alert.present? %>
          <p class="alert"><%= alert %></p>
        <% end %>
        <%= yield %>
      </div>
      <div class="span3">
        <div class="well sidebar-nav">
          <%= link_to 'Start New Topic', new_topic_path, class: 'btn btn-large btn-block btn-primary', type: 'button' %>
          <ul class="nav nav-list">
            <li class="nav-header">Sidebar</li>
            <li class="active"><a href="#">Link</a></li>
            <li><a href="#">Link</a></li>
            <li><a href="#">Link</a></li>
            <li><a href="#">Link</a></li>
          </ul>
        </div><!--/.well -->
      </div><!--/span-->
    </div>

    <hr>

    <footer>
      <p>&copy; Kopitiam 2013</p>
    </footer>

  </div> <!-- /container -->

</body>

</body>
</html>
